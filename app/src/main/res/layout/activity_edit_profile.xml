<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".EditProfileActivity">
    <LinearLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#F1F1F1"
        tools:context=".EditProfileActivity">

        <LinearLayout
            android:id="@+id/comment_bar"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="center"
            android:windowSoftInputMode="adjustResize">

            <ImageView
                android:id="@+id/backTohome_update"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginTop="4dp"
                android:layout_marginStart="20dp"
                android:src="@drawable/back_arrow"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:layout_marginStart="20dp"
                android:textSize="20dp"
                android:textStyle="bold"
                android:text="Edit Profile"/>

        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            app:cardCornerRadius="80dp"
            android:layout_gravity="center"
            android:layout_marginTop="14dp"
            android:padding="6dp"
            app:cardElevation="10dp">

            <LinearLayout
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/green_border"
                android:layout_marginRight="4dp"
                android:layout_marginLeft="4dp"
                android:orientation="vertical"
                tools:context=".Login">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/edit_account"
                    android:layout_marginBottom="10dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="50dp"
                    android:fontFamily="@font/sakkal"
                    android:shadowColor="@color/text_shadow"
                    android:shadowDx="10"
                    android:shadowDy="18"
                    android:shadowRadius="11"
                    android:text="Update Account Info"
                    android:textColor="@color/black"
                    android:textSize="40sp"
                    android:textStyle="bold" />



                <LinearLayout
                    android:layout_width="300dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="30dp"
                    android:background="@drawable/edit_text_rounder"
                    android:elevation="10dp"
                    android:orientation="horizontal">


                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_username"
                            android:layout_width="235dp"
                            android:layout_height="wrap_content"
                            android:background="@color/no"
                            android:hint="Enter New User Name"
                            android:inputType="text" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:layout_marginStart="10dp"
                        android:src="@drawable/user_icon"
                        tools:layout_editor_absoluteX="25dp"
                        tools:layout_editor_absoluteY="25dp" />
                </LinearLayout>



                <LinearLayout
                    android:layout_width="300dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="50dp"
                    android:background="@drawable/edit_text_rounder"
                    android:elevation="10dp"
                    android:orientation="horizontal">


                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_location"
                            android:layout_width="231dp"
                            android:layout_height="wrap_content"
                            android:background="@color/no"
                            android:hint="Enter New Location"
                            android:inputType="text" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:layout_marginStart="10dp"
                        android:src="@drawable/location"
                        tools:layout_editor_absoluteX="25dp"
                        tools:layout_editor_absoluteY="25dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="232dp"
                    android:layout_height="45dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="0dp"
                    android:orientation="vertical"
                    android:background="@drawable/button_color"
                    android:elevation="10dp">


                    <Button
                        android:id="@+id/btn_reset_password"
                        android:layout_width="220dp"
                        android:layout_height="wrap_content"
                        android:background="@color/no"
                        android:text="Reset Password"
                        android:gravity="center"
                        android:textColor="@color/black"
                        android:textSize="19sp"
                        tools:ignore="TouchTargetSizeCheck" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="232dp"
                    android:layout_height="45dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="6dp"
                    android:orientation="vertical"
                    android:background="@drawable/button_color"
                    android:elevation="10dp">


                    <Button
                        android:id="@+id/btn_update"
                        android:layout_width="220dp"
                        android:layout_height="wrap_content"
                        android:background="@color/no"
                        android:gravity="center"
                        android:text="Update"
                        android:textColor="@color/black"
                        android:textSize="19sp"
                        tools:ignore="TouchTargetSizeCheck" />
                </LinearLayout>


            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>